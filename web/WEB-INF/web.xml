<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>aa.web.AuthFilter</filter-class>
        <init-param>
            <param-name>exclude</param-name>
            <param-value>/staticpages/*,/login.html,/current.jsp,/index.html,/ProcessLogin</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>ProcessBuy</servlet-name>
        <servlet-class>app.action.ProcessBuy</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessLogin</servlet-name>
        <servlet-class>app.action.ProcessLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProcessBuy</servlet-name>
        <url-pattern>/ProcessBuy</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProcessSell</servlet-name>
        <servlet-class>app.action.ProcessSell</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProcessSell</servlet-name>
        <url-pattern>/ProcessSell</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessLogin</servlet-name>
        <url-pattern>/ProcessLogin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
